  <input class="form-control text-default" type="text" id="Duration" name="Duration" placeholder="Duration" /><br /><br />

  <label class="fs-4 text-default mb-2" for="Goal">6. Goal</label>
  <textarea placeholder="Goals" class="form-control text-default" type="text" id="Goal" name="Goal"></textarea><br /><br />

  <div class="d-flex gap-3">
  <button class="btn btn-primary px-4 py-3 rounded-5" type="submit">Add Habit</button>
