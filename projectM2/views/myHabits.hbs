{{#if userHabits.habit.length}}
  {{#each userHabits.habit}}
    <h1>  <a href="/myHabits/{{_id}}">{{this.Habit}}</a></h1>
    <form action="/habitEdit/{{this._id}}" method="get">
      <button>Edit</button>
    </form>
    <form action="/habitDelete/{{this._id}}" method="post" onsubmit="return confirm('Are you sure you want to delete this habit?');">
      <button>Delete</button>
    </form>
  {{/each}}
  <a href="/profile">BACK</a>
  <a href="/habitCreate"> Create new habit here</a>
{{else}}
  <p>You have no habits yet.</p>
  <a href="/habitCreate">Create your first habit here!</a>
{{/if}}
