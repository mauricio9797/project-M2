  <label for="Tasks">Tasks:</label><br />
  <select type="text" id="Tasks" name="Tasks">
    <option value="spend time with your loved ones">Spend time with your loved
      ones</option>
    <option value="practice active listening">practice active listening</option>
    <option value="Show appreciation for others">Show appreciation for others</option>
    <option value="Communicate effectively">Communicate effectively</option>

  </select><br />
  <label for="Tasks1">Tasks:</label><br />
  <select type="text" id="Tasks1" name="Tasks1">
